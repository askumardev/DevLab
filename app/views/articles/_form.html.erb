<%= form_with(model: article, local: true) do |form| %>
  <% if article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h2>
      <ul>
        <% article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, rows: 10 %>
  </div>

  <fieldset class="sections" data-controller="nested-form">
    <legend>Sections</legend>

    <div class="sections-list" data-nested-form-target="container">
      <%= form.fields_for :sections do |sf| %>
        <div class="section-item nested-fields" role="group" aria-label="section">
          <%= sf.hidden_field :id %>
          <div class="field field-heading">
            <%= sf.text_field :heading, placeholder: 'Heading' %>
          </div>
          <div class="field field-content">
            <%= sf.text_field :content, placeholder: 'Content' %>
          </div>
          <%= sf.hidden_field :_destroy %>
          <button type="button" class="remove-section" data-action="click->nested-form#remove" title="Remove">×</button>
        </div>
      <% end %>
    </div>

    <div data-nested-form-target="template" style="display:none">
      <%= form.fields_for :sections, Section.new, child_index: "new_section" do |sf| %>
        <div class="section-item nested-fields" role="group" aria-label="new-section">
          <div class="field field-heading">
            <%= sf.text_field :heading, placeholder: 'Heading' %>
          </div>
          <div class="field field-content">
            <%= sf.text_field :content, placeholder: 'Content' %>
          </div>
          <button type="button" class="remove-section" data-action="click->nested-form#remove" title="Remove">×</button>
        </div>
      <% end %>
    </div>

    <div class="add-section-wrap">
      <button type="button" class="add-section" aria-label="Add section" data-action="click->nested-form#add">+</button>
    </div>
  </fieldset>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
