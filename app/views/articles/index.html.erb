<h1>Articles</h1>

<p><%= link_to 'New Article', new_article_path, class: 'button' %></p>

<table>
  <thead>
    <tr>
      <th>No.</th>
      <th>Title</th>
      <th>Body</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.id, article_path(article) %></td>
        <td><%= link_to article.title, article_path(article) %></td>
        <td><%= truncate(article.body.to_s, length: 150) %></td>
        <td>
          <%= link_to 'Show', article_path(article) %>
          |
          <%= link_to 'Edit', edit_article_path(article) %>
          |
          <%= button_to  'Delete', article_path(article), method: :delete, class: "button-as-link red-text", data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
